<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.Animation" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="FullScreen" parent="AppTheme.Animation">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_out_to_right</item>
    </style>

    <style name="style_login_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:background">@drawable/selector_edit_bottom_line</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>
</resources>
