<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    tools:showIn="@layout/activity_bet">

    <TextView
        android:id="@+id/tvNextRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="开奖期数"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:text="@string/balance"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="@id/tvNextRound"
        app:layout_constraintTop_toBottomOf="@id/tvNextRound"/>

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_1"
        app:layout_constraintStart_toEndOf="@id/tv_1"
        tools:text="200.40"/>

    <TextView
        android:id="@+id/tvOpenTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00:00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="@string/prize_time"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@id/tvOpenTime"
        app:layout_constraintEnd_toStartOf="@id/tvOpenTime"/>

    <LinearLayout
        android:id="@+id/llCloseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/lotteryNumberView"
        app:layout_constraintEnd_toEndOf="@id/tvOpenTime">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@string/lottery_closed"
            android:textColor="@color/text_dark"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tvCloseTimeMinute"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_time_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/default_text"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/colon"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvCloseTimeSecond"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_time_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/default_text"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCloseTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/lotteryNumberView"
        app:layout_constraintEnd_toEndOf="@id/tvOpenTime">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="@string/lottery_closed"
            android:textColor="@color/text_dark"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/tvCloseTime2Hour"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_time_bg"
            android:gravity="center"
            android:minWidth="25dp"
            android:singleLine="true"
            android:text="@string/default_text"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/colon"
            android:textColor="@color/text_dark"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/tvCloseTime2Minute"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_time_bg"
            android:gravity="center"
            android:minWidth="25dp"
            android:singleLine="true"
            android:text="@string/default_text"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/colon"
            android:textColor="#000"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/tvCloseTime2Second"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_time_bg"
            android:gravity="center"
            android:minWidth="25dp"
            android:singleLine="true"
            android:text="@string/default_text"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLastRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/lotteryNumberView"
        app:layout_constraintStart_toStartOf="@id/tvNextRound"
        app:layout_constraintTop_toTopOf="@id/lotteryNumberView"
        tools:text="20171206-54"/>

    <com.daking.lottery.widget.LotteryNumberView
        android:id="@+id/lotteryNumberView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:flexWrap="wrap"
        app:layout_constraintEnd_toEndOf="@id/tvOpenTime"
        app:layout_constraintStart_toEndOf="@id/tvLastRound"
        app:layout_constraintTop_toBottomOf="@id/tvBalance"
        tools:layout_height="24dp"/>

    <com.daking.lottery.widget.LotteryPropertyView
        android:id="@+id/lotteryPropertyView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_stroke_divider"
        app:dividerDrawableVertical="@drawable/shape_vertical_divider"
        app:layout_constraintEnd_toEndOf="@id/tvOpenTime"
        app:layout_constraintStart_toStartOf="@id/tvNextRound"
        app:layout_constraintTop_toBottomOf="@id/lotteryNumberView"
        app:showDividerVertical="middle"/>

</android.support.constraint.ConstraintLayout>